<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE hibernate-mapping
   PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 <hibernate-mapping>
   <class name="Pessoa"
       dynamic-update="true"
       dynamic-insert="true"
       select-before-update="true"
       lazy="true"
       table="PESSOA">
       <id name="codigo" column="COD_PESSOA" type="int">
           <generator class="assigned"/>
       </id>
       <property name="nome" column="NM_PESSOA" type="java.lang.String" length="40"/>
       <property name="sobrenome" column="SB_PESSOA" type="java.lang.String" length="60" />
   </class>
 </hibernate-mapping>
